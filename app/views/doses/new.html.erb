<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 text-center">
        <h1>Create a dose for <%= @cocktail.name %></h1>
            <%= simple_form_for [@cocktail, @dose ] do |f| %>
            <%= f.input :description %>
            <%= f.input :ingredient_id, collection: Ingredient.all %>
            <%= f.button :submit %>
        <% end %>
</div>
</div>
</div>
